extends /default.pug

block scripts
  script(src='public/js/src/faltas.js')

block view
  .animated.fadeIn
    .row
      .col-md-12.mb-12
        ul.nav.nav-tabs(role='tablist')

    .row
      .col-md-12
        .card
          .card-header
            | Livro de Ponto
          .card-body
            .row
              .col-sm-6
                .row
                  // /.col
                  .col-sm-6
                    .callout.callout-danger
                      small.text-muted Classe
                      br
                      strong.h4 12ªInf
                      .chart-wrapper
                        canvas#sparkline-chart-2(width='100', height='30')
                  .col-sm-6
                    .callout.callout-danger
                      small.text-muted Tempo
                      br
                      strong.h4 1º
                      .chart-wrapper
                        canvas#sparkline-chart-2(width='100', height='30')
                  // /.col
                // /.row

              .col-sm-6
                .row
                  .col-sm-6
                    .callout.callout-success
                      small.text-muted Disciplina
                      br
                      strong.h4 Matemática
                      .chart-wrapper
                        canvas#sparkline-chart-4(width='100', height='30')
                  // /.col
                  .col-sm-6
                    .callout.callout-success
                      small.text-muted Professor
                      br
                      strong.h4 Tito Marques
                      .chart-wrapper
                        canvas#sparkline-chart-4(width='100', height='30')
                // /.row

            br
            table(class="table table-responsive-sm table-hover table-outline mb-0", data-rows=rows)
              thead.thead-light
                tr
                  th.text-center
                    i.icon-people
                  th Nome
                  th.text-center Nacionalidade
                  th Desempenho Global
                  th.text-center Ranking de Faltas
                  th
              tbody
      // /.col
    // /.row
